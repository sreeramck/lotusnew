extends layout

block content
	h1= title
	p Welcome to Lotus

	// Wrapper
	#wrapper

		// USER INFO
		#prodInfo
			h2 Price Info
			p
				strong Name:
				|  <span id='prodInfoName'></span>
				br
				strong Price:
				|  <span id='prodInfoPrice'></span> as of
				|  <span id='prodInfoTime'></span>
			table
				thead
					th Historical Data
				tbody
		// /USER INFO

		// USER LIST
		h2 Wish List
		#prodList
			table
				thead
					th ProdName
					th Price
					th Changed On
					th Unfollow
				tbody
		// /USER LIST
		// SEARCH USER
		h2 Search Product
		#searchProd
			fieldset
				input#inputSearName(type='text', placeholder='name')
				button#btnSearProd Search Product
		// /SEARCH USER
		// ADD USER
		h2 Add Product
		#addProd
			fieldset
				input#inputProdName(type='text', placeholder='name')
				input#inputPrice(type='text', placeholder='price')
				button#btnAddProd Add Product
		// /ADD USER
		// RESULT LIST
		h2 Search Result
		#resultList
			table
				tbody
		// /RESULT LIST
		
	// /WRAPPER